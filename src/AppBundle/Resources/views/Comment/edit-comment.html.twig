{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(edit_form) }}
    {{ form_row(edit_form.commentText) }}
    {{ form_label(edit_form.commentMark) }}
    {{ form_widget(edit_form.commentMark, { 'attr': {'disabled' : 'true', 'style' : 'cursor: default;'} }) }}
    <br>
    <input type="submit" value="Update Comment" class="btn btn-primary" />
    {{ form_end(edit_form) }}

    <br>
    {{ form_start(delete_form) }}
    {{ form_widget(delete_form) }}
    <input type="submit" value="Delete Comment" class="btn btn-danger" />
    {{ form_end(delete_form) }}

    <br>
    <a href="{{ path("articles", {"articleId": articleId} ) }}" class="btn btn-default">Back to article</a>
{% endblock %}