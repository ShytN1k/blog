{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('homepage')}}" class=" btn btn-default">Back to all articles</a>
    <div class="wrapper">
        <div class="content all-articles">
            <div class="articles">
                <div class="header">
                    <span class="">
                        Author: {{ author.firstname }} {{ author.lastname }} aka {{ author.nickname }}
                    </span>
                </div>
                <ul>
                    {% for article in articles %}
                        <li class="article">
                            {#<div class="image">#}
                            {#<img src="images/article1.jpg" alt="article">#}
                            {#</div>#}
                            <div class="article-content">
                                <h2>{{ article.name }}</h2>
                                <span class="date">
                                    Posted at {{ article.createdAt|date("M-d-Y") }} by <a href="{{ path('articlesByAuthor', {"authorId": author.id}) }}" class="author">{{ author.firstname }} {{ author.lastname }}</a> aka <a href="{{ path('articlesByAuthor', {"authorId": author.id}) }}" class="info">{{ author.nickname }}</a>
                                </span>
                                <br>
                                <span class="tags">
                                    {% for tag in article.tags %}
                                        <a href="{{ path('articlesByTag', {"tagId": tag.id} )}}">#{{ tag.tagname }}</a>
                                    {% endfor %}
                                </span>
                                <p>
                                    {{ article.articleText }}
                                </p>

                                <div class="adds">
                                    <ul>
                                        <li><a href="{{ path('articlesByAuthor', {"authorId": author.id}) }}" class="author">{{ author.nickname }}</a> /</li>
                                        <li><a href="{{ path('articlesByAuthor', {"authorId": author.id}) }}" class="author">{{ author.firstname }} {{ author.lastname }}</a> /</li>
                                        <li><a href="{{ path('articles', {"articleId": article.id} )}}" class="read-more">Read more</a></li>
                                    </ul>
                                    <span class="like">{{ article.mark }}</span>
                                </div>
                            </div>
                        </li>
                        <br>
                    {% endfor %}
                </ul>
                <div class="navigation">
                    {{ knp_pagination_render(articles) }}
                </div>
            </div>
            <div class="sidebar">
                {{ render(controller(
                'AppBundle:Default:sidebar'
                )) }}
            </div>
        </div>
    </div>
{% endblock %}